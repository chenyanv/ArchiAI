# Backend environment configuration
# Copy to .env and fill in your API keys

# Database (for local development outside Docker)
STRUCTURAL_SCAFFOLD_DB_URL=postgresql+psycopg://archai:archai@localhost:55432/structural_scaffolding

# LLM Provider selection: openai | gemini
SUMMARY_PROVIDER=openai
ORCHESTRATION_LLM_PROVIDER=gemini

# OpenAI (get key from https://platform.openai.com/api-keys)
OPENAI_API_KEY=
OPENAI_SUMMARY_MODEL=gpt-4o-mini
ORCHESTRATION_OPENAI_MODEL=gpt-4o-mini

# Gemini (get key from https://aistudio.google.com/apikey)
GEMINI_API_KEY=
GEMINI_SUMMARY_MODEL=gemini-2.5-flash
ORCHESTRATION_GEMINI_MODEL=gemini-2.5-pro

# LLM parameters
OPENAI_SUMMARY_TEMPERATURE=0.2
OPENAI_SUMMARY_MAX_TOKENS=1024
GEMINI_SUMMARY_TEMPERATURE=0.2
GEMINI_SUMMARY_MAX_TOKENS=1024
